{
    "tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc-9 build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-D BUFFER_SIZE=42",
				"*.c",
				"utils/*.c",
				"-L./libs/mlx-linux/ -L./libs/libft/ -lmlx_Linux -lm -lXext -lX11 -llibft",
				"-o",
				"${fileDirname}/salida"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
			"type": "cppbuild",
			"label": "C/C++: make active file",
			"command": "make",
			"args": [
				"linux"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
	],
    "version": "2.0.0"
}